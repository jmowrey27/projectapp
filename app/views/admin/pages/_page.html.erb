<div class="page">
  <% if page.background_image? %>
    <div id="<%= dom_id page %>_background" class="page-background" style="background-image: url('<%= url_for(page.background_image) %>');"></div>
    <div id="<%= dom_id page %>_content" class="page-body">
  <% else %>
    <div id="<%= dom_id page %>_content" class="page-body">
  <% end %>
      <p>
        <strong></strong>
        <%= page.title %>
      </p>

    <p>
      <strong></strong>
      <%= page.body.html_safe %>
    </p>

    <!-- <p>
      <strong>Slug:</strong>
      <%= url_for_page page %>
    </p>
    -->
    </div>
  </div>
</div>
