

<h1>Pages</h1>

<% @pages.each do |page| %>
   <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Title:</th>
          <th scope="col">Body:</th>
          <th scope="col">Slug:</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          
          <td scope="row"> <%= link_to page.title, admin_page_path(page) %> </td>
          <td scope="row">  <%= page.body.html_safe %> </td>
          <td scope="row"> <%= url_for_page page %> </td>
          <td scope="row"> <%= button_to "Destroy this page", admin_page_path(page), method: :delete %></td>
          <td scope="row"><%= link_to "Edit this page", edit_admin_page_path(page), method: :patch %> </td>
         </tr>
      </tbody>
    </table>
  <%end%>


<%= link_to "New page", new_admin_page_path %>
