
<div class="image">
  <% if @product.image.attached? %>
    <%= image_tag @product.image %>
  <% else %>
    <%= image_tag "dog shades.jpg", alt: "Placeholder image" %>
  <% end %>
</div>
<p><%= @product.name %></p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price %>
</p>
