
<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6">
        <div class="card mb-4">
          <%= image_tag product.image, class: "card-img-top" if product.image.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text"><%= number_to_currency(product.price) %></p>
            <%= link_to 'View', product, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_admin_product_path(product) %> |
            <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= will_paginate @products, renderer: BootstrapLinkRenderer %>
  </div>



